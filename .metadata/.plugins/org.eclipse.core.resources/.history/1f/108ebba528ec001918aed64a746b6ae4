public class IntNode {
	public int data;
	public IntNode next;
	public IntNode(int data, IntNode next) {
		this.data = data; this.next = next;
	}
	public String toString() {
		return data + "";
	}
	
	public static IntNode addBefore(IntNode front, int target, int newItem)
	{
		IntNode trailingptr = front;
		IntNode ptr = front.next;
		
		if(front.data == target) {
			IntNode newfront = new IntNode(newItem, front);
			front = newfront;
		}
		else {
			while(ptr != null) {
				if (ptr.data ==  target) {
					IntNode newFront = new IntNode(newItem, trailingptr);
					front = newFront;
				}
				trailingptr = trailingptr.next;
				ptr = ptr.next;
			}	
		}
		
		return front;
	}
	
	public static void main(String[] args) {
		
	}
}
